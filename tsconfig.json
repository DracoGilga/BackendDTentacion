{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "rootDirs": ["."], 
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
