{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS", // Cambiado para compatibilidad con Knex
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "rootDirs": ["."], // Agregado para manejar varias carpetas ra√≠z si es necesario
    },
    "include": ["**/*.ts"], // Cambiado para incluir todos los archivos TypeScript en subcarpetas
    "exclude": ["node_modules"]
}
